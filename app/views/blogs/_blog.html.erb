<div id="<%= dom_id blog %>">
  <p>
    <strong>タイトル:</strong>
      <%=link_to(blog.title,"/posts/#{blog.id}") %>
  </p>

  <p>
    <strong>概要欄:</strong>
    <%= blog.memo %>
  </p>
  
  <p>
    <strong>投稿写真:</strong>
    <% if blog.image.present? %>
      <%= image_tag blog.image %>
    <% else %>
      <p>写真無し</p>
    <% end %>
    

  </p>
  <p>
    <%=link_to("写真の詳細","/posts/#{blog.id}") %>

  </p>

</div>
