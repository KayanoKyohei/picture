<h2>ユーザー名：<%=@user.name %></h2>
<p>メールアドレス：<%=@user.email %></p>
<% if @user.id == @current_user.id %>
    <%= link_to("編集", "/user/#{@user.id}/edit") %>
    <%#= link_to("削除", "/user/#{@user.id}/destroy",{method:"post"}) %>
    <p><%=@user.name %>さんが投稿したタイトル一覧</p>
    <p><% @user.posts.each do |post| %></p>
    <p><%#= link_to(post.user.name, "/user/#{post.user.id}") %></p>
    <p><%= link_to(post.title, "/posts/#{post.id}") %></p>
    <% end %>
<% end %>