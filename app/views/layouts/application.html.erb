<!DOCTYPE html>
<html>
  <head>
    <title>ActiveStorage</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <header>
      <div class = "header-logo">
        <% if @current_user %>
          <%= link_to("写真投稿アプリ", "/") %>
        <% else %>
          <%= link_to("写真投稿アプリ", "/") %>
        <% end %>
      </div>
      <ul>
        <% if @current_user %>
          <li>
            <%= link_to(@current_user.name, "/user/#{@current_user.id}") %>
            でログイン中
          </li>
          <li>
            <%= link_to("投稿一覧", "/blog") %>
          </li>
          <li>
            <%= link_to("ユーザー一覧", "/user/index") %>
          </li>
          <li>
            <%= link_to("ログアウト", "/logout", {method: "post"}) %>
          </li>
        <% else %>
          <li>
            <%= link_to("写真投稿アプリとは", "/home/about") %>
          </li>
          <li>
            <%= link_to("ユーザー新規登録", "/signup") %>
          </li>
          <li>
            <%= link_to("ログイン", "/login") %>
          </li>
        <% end %>
      </ul>
    </header>
    <% if flash[:notice] %>
    <%= flash[:notice] %>
    <% end %>
    <%= yield %>
  </body>
</html>
